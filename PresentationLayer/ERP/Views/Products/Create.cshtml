@model Domain.ViewModels.ProductCreateVieewModel

@{
    ViewData["Title"] = "Create";
}
@section styles{ }
<h1 class="text-center text-primary">Create New Product</h1>
<div>
    <a asp-action="Index" class="btn btn-danger">Back to List</a>
</div>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group col-md-4 dsplayinlineblock">
        <label asp-for="ProductId" class="control-label lbl"></label>
        <input asp-for="ProductId" class="form-control" />
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    <div class="form-group dsplayinlineblock col-md-3">
        <label asp-for="Model" class="control-label lbl"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group dsplayinlineblock   col-md-2">
        <label asp-for="SalePrice" class="control-label lbl"></label>
        <input type="number" asp-for="SalePrice" class="form-control" />
        <span asp-validation-for="SalePrice" class="text-danger"></span>
    </div>
    <div class="form-group dsplayinlineblock   col-md-6">
        <label asp-for="ArabicName" class="control-label lbl"></label>
        <input asp-for="ArabicName" class="form-control" />
        <span asp-validation-for="ArabicName" class="text-danger"></span>
    </div>
    <div class="form-group dsplayinlineblock  col-md-5">
        <label asp-for="EnglishName" class="control-label lbl"></label>
        <input asp-for="EnglishName" class="form-control" />
        <span asp-validation-for="EnglishName" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6 dsplayinlineblock">
        <label asp-for="Desc" class="control-label lbl"></label>
        <textarea asp-for="Desc" class="form-control"></textarea>
        <span asp-validation-for="Desc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
