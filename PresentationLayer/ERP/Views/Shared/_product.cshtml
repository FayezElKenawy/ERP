
<table class="table table-bordered">

    <thead class="thead-light">
        <tr>
            <th>
                Code
            </th>
            <th>
                Name Arabic
            </th>
            <th>
                Model
            </th>
            <th>
                Descritption
            </th>
            <th>
                Cost
            </th>
            <th>
                Sale Price
            </th>
        </tr>
    </thead>
    <tbody id="TableProducts"></tbody>
    </table>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script>
            $(function () {
                console.log("first");
                var productrow = $('#TableProducts');
                $.ajax({
                    type: "GET",
                    url: '/Products/ProductsList',
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (Products) {
                        $.each(Products, function (key, product) {
                            productrow.append('<tr>' + '<td>' + product.id + '</td>' +
                                '<td>' + product.arabicName + '</td>' +
                                '<td>' + product.model + '</td>' +
                                '<td>' + product.desc + '</td>' +
                                '<td>' + product.cost + '</td>' +
                                '<td>' + product.salePrice + '</td>' +
                                '<td>' + '<a href="/Products/Edit/' + product.id + '" >' + "Edit" + '</a>' + ' | ' +

                                '<a href="/Products/Delete/' + product.id + '" >' + "Delete" + '</a>' + ' | ' +

                                '<a href="/Products/Details/' + product.id + '" >' + "Details" + '</a>' +
                                '</td>' + '</tr>');
                        });
                    }

                });
            });

        </script>
