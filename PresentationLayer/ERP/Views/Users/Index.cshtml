@model IEnumerable<UsersReadViewModel>
@{
    ViewData["Title"] = "UserList";
}

<h1 class="text-center text-primary ">Users</h1>
<hr />

<a class="btn btn-outline-primary" asp-action="Create">Create New User</a>
<div class="modal fade bd-example-modal-xl" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <partial name="_UserInfo"/>
        </div>
    </div>
</div>
<table class="table table-bordered  text-center mt-4">
    <thead class="table-primary">
        <tr>
            <th>Frist Name  </th>
            <th>Last Name   </th>
            <th>User Name   </th>
            <th>Email       </th>
            <th>Phone Number</th>
            <th>Status</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr id="@user.Id">
            <td>@user.FristName</td>
            <td>@user.LastName</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.PhoneNumber</td>
            <td>@string.Join(",", user.Roles.ToList())</td>
            @{ if (user.IsDeleted.ToLower() == "false")
                {
                    <td>Active</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id"><span><i class="icon-edit"></i></span></a>
                        <a id="userid" class="text-danger p-2" data-toggle="modal" data-target=".bd-example-modal-xl" user="@user.Id"><spn><i class="icon-trash"></i></spn></a>
                    </td>
                }
                else
                {
                    <td>Deleted</td>
                    <td>
                        <a id="reActive" user="@user.Id"><spn><i class="icon-refresh"></i></spn></a>
                    </td>
                }
            }


        </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script src="~/js/admin.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
