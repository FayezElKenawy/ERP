@model IEnumerable<UsersReadViewModel>
 @{ 
     ViewData["Title"] = "UserList";
 }
    
<h1 class="text-center text-primary ">Users</h1>
<hr />

<a class="btn btn-outline-primary" asp-action="Create">Create New User</a>

<table class="table  text-center mt-4">
    <thead class="table-primary">
        <tr>
            <th>Frist Name  </th>
            <th>Last Name   </th>
            <th>User Name   </th>
            <th>Email       </th>
            <th>Phone Number</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
@foreach (var user in Model)
{
        <tr>
            <td>@user.FristName</td>
            <td>@user.LastName</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.PhoneNumber</td>
            <td>@string.Join(",",user.Roles.ToList())</td>
            <td><a asp-action="Edit" asp-route-id="@user.Id"><span><i class="icon-edit"></i></span></a> </td>
        </tr>
}
    </tbody>
</table>
